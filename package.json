{
  "name": "saas-boilerplate",
  "version": "1.0.1",
  "scripts": {
    "dev:spotlight": "spotlight-sidecar",
    "dev:next": "next dev --turbopack",
    "dev": "run-p dev:*",
    "build": "next build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit --pretty",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "commit": "cz",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate-prod": "dotenv -c production -- drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:studio-prod": "dotenv -c production -- drizzle-kit studio",
    "db:seed": "tsx --tsconfig tsconfig.seed.json src/scripts/seed.ts",
    "db:reset": "npm run db:push && npm run db:seed",
    "db:reset-only": "tsx src/scripts/reset-db.ts",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6006 --silent",
    "serve-storybook": "run-s storybook:*",
    "test-storybook:ci": "start-server-and-test serve-storybook http://127.0.0.1:6006 test-storybook",
    "prepare": "husky",
    "validate": "run-p check-types lint test"
  },
  "dependencies": {
    "@clerk/localizations": "^3.16.4",
    "@clerk/nextjs": "^6.21.0",
    "@electric-sql/pglite": "^0.3.3",
    "@logtail/pino": "^0.5.2",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/nextjs": "^9.28.1",
    "@spotlightjs/spotlight": "^2.13.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-bubble-menu": "^3.10.1",
    "@tiptap/extension-image": "^3.10.1",
    "@tiptap/extension-link": "^3.10.1",
    "@tiptap/extension-placeholder": "^3.10.1",
    "@tiptap/extension-task-item": "^3.10.1",
    "@tiptap/extension-task-list": "^3.10.1",
    "@tiptap/markdown": "^3.10.1",
    "@tiptap/pm": "^3.10.1",
    "@tiptap/react": "^3.10.1",
    "@tiptap/starter-kit": "^3.10.1",
    "@tiptap/suggestion": "^3.10.1",
    "@uiw/react-md-editor": "^4.0.8",
    "axios": "^1.13.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "html2canvas": "^1.4.1",
    "html2canvas-pro": "^1.5.12",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.514.0",
    "next": "^15.3.3",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.53.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "stripe": "^18.2.1",
    "tailwind-merge": "^3.3.1",
    "tippy.js": "^6.3.7",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@eslint-react/eslint-plugin": "^1.15.0",
    "@next/bundle-analyzer": "^15.3.3",
    "@next/eslint-plugin-next": "^15.3.3",
    "@percy/cli": "^1.30.11",
    "@percy/playwright": "^1.0.8",
    "@playwright/test": "^1.53.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.1",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "checkly": "^5.6.0",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-testing-library": "^7.5.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.5",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.2",
    "start-server-and-test": "^2.0.12",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.9",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3",
    "vitest-fail-on-console": "^0.7.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
